bindsym $mod+button3 floating toggle

exec firefox
exec google-chrome
#change backspace to capslock
exec setxkbmap -option caps:backspace


#volume control
bindsym $mod+comma exec amixer set Master unmute; exec amixer set Master -q 5%-
bindsym $mod+period exec amixer set Master unmute; exec amixer set Master -q 5%+
bindsym $mod+m exec amixer set Master mute
bindsym $mod+slash exec amixer set Master unmute; exec amixer set Master -q 100%

#shutdown, reboot, and exit commands
bindsym $mod+Delete exec shutdown now
